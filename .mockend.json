{
  "User": {
    "name": { "regexp": "[A-Z][a-z]{5,10}" },
    "email": { "regexp": "[a-z]{5,10}@[a-z]{5}\\.[a-z]{2,3}" },
    "posts": {
      "hasMany": "Post"
    }
  },
  "Post": {
    "title": { "string": {} },
    "comments": {
      "hasMany": "Comment"
    },
    "user": {
      "belongsTo": "User"
    }
  },
  "Comment": {
    "body": { "loremSentences": { "minLength": 100, "maxLength": 200 } },
    "post": {
      "belongsTo": "Post"
    }
  }
}
